pipeline {
    agent { label 'ss' }

    environment {
        APP_NAME   = "pipeline-nginx"
        IMAGE_NAME = "pipeline-nginx:${BUILD_NUMBER}"
        PORT       = "30080"
    }

    stages {

        stage('Checkout (SCM)') {
            steps {
                echo "Code already checked out by Jenkins (Pipeline from SCM)"
                sh '''
                  pwd
                  ls -l
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('KUBERNETES') {
                    sh '''
                      echo "Building Docker image..."
                      docker build -t ${IMAGE_NAME} .
                    '''
                }
            }
        }

        stage('Load Image into containerd') {
            steps {
                sh '''
                  echo "Saving Docker image..."
                  docker save ${IMAGE_NAME} -o image.tar

                  echo "Importing image into containerd..."
                  sudo ctr -n k8s.io images import image.tar
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${APP_NAME}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${APP_NAME}
  template:
    metadata:
      labels:
        app: ${APP_NAME}
    spec:
      containers:
      - name: nginx
        image: ${IMAGE_NAME}
        imagePullPolicy: Never
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: ${APP_NAME}-svc
spec:
  type: NodePort
  selector:
    app: ${APP_NAME}
  ports:
  - port: 80
    targetPort: 80
    nodePort: ${PORT}
EOF
                """
            }
        }
    }

    post {
        success {
            echo "‚úÖ Application deployed successfully"
            echo "üåê Access: http://<NODE-IP>:${PORT}"
        }
        failure {
            echo "‚ùå Pipeline failed"
        }
    }
}
